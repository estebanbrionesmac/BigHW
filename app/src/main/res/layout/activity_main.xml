<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ejbm.mac.com.bighw.MainActivity"
    android:orientation="vertical"

    app:theme="@style/AppTheme">

    <Button
        android:id="@+id/btn_createDB"
        android:layout_height="50dp"
        android:layout_width="wrap_content"

        android:elevation="@dimen/buttonsElevation"

        android:text="Create DB"
        android:onClick="clickButtonLoadContacts"
        />

    <Button
        android:id="@+id/btn_deleteDB"
        android:layout_height="50dp"
        android:layout_width="wrap_content"

        android:elevation="@dimen/buttonsElevation"

        android:text="Empty DB"
        android:onClick="clickButtonEmptyDB"
        />

    <Button
        android:id="@+id/btn_viewData"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:elevation="@dimen/buttonsElevation"

        android:text="View Data"

        android:onClick="clickButtonViewData"
        />

    <Button
        android:id="@+id/btn_addContact"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:elevation="@dimen/buttonsElevation"

        android:text="Create a Contact "

        android:onClick="clickButtonAddContact"
        />


    <Button
        android:id="@+id/btn_syncData"

        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:elevation="@dimen/buttonsElevation"

        android:text="Sync Data to the Cloud"

        android:onClick="syncData"
        />


</LinearLayout>
